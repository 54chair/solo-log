<% if user_signed_in? && @user.present? %>
  <%= turbo_frame_tag "follow_button" do %>
    <% if current_user.following?(@user) %>
      <%= render 'relationships/unfollow', locals: { user: @user } %>
    <% else %>
      <%= render 'relationships/follow', locals: { user: @user } %>
    <% end %>
  <% end %>
<% end %>

