<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2 class ="text-center">新規登録</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.full_messages.present? %>
        <ul class="alert alert-danger validation-error-list">
          <% resource.errors.full_messages.each do |error| %>
            <strong><li><%= error %></li></strong>
          <% end %>
        </ul>
      <% end %>
      <div class="field form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: 'form-control', placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード", autocomplete: "new-password" %>
      </div>
    
      <div class="field form-group mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード(確認用)", autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-warning btn-block' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>