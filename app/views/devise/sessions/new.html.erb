<div class="row">
  <div class="col-md-6 offset-md-3"">
    <h2 class ="text-center">Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: "form-label"  %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password, class: "form-label"  %><br />
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード", autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-warning btn-block' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>