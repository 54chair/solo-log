<div class="col-md-8">
  <h1>店名：<%= @shop.name %></h1>
</div>

<div class="col-md-8">
  <h2>住所：<%= @shop.address %></h2>
</div>

<div class="col-md-8">
  <h3>投稿件数： <%= @reviews.count %>件</h3>
</div>

<!--ページ幅に合わせてカードの列数を減少させる-->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
  <div class="col">
    <div class="card h-100">
      <div class="card-body text-center">
        <%= link_to "投稿する", new_shop_review_path(shop_id: @shop.id), class: "btn btn-primary rounded-pill" %>
      </div>
    </div>
  </div>
  <% @reviews.each do |review| %>
    <div class="col">
      <div class="card h-100">
        <a href="<%= review_path(review) %>">
          <img src="https://user0514.cdnw.net/shared/img/thumb/nichinanIMGL0073_TP_V.jpg" class="card-img-top" alt="...">
        </a>
        <div class="card-body">
          <h5 class="card-title">評価：<%= review.rate %></h5>
          <p class="card-text">コメント：<%= review.comment %></p>

          <% if user_signed_in? && current_user.id == review.user_id %>
            <a href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= review.id %>">削除</a>
          <% end %>
          <!-- モーダルダイアログ -->
          <div class="modal fade" id="deleteModal<%= review.id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteModalLabel">レビューの削除</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <p>本当に削除しますか？</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                  <%= link_to "削除", review_path(review), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>

          <% if user_signed_in? && current_user.id == review.user_id %>
            <%= link_to '編集', edit_review_path,  method: :edit, data: { confirm: '本当に編集しますか?' }, class: 'btn btn-primary' %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
</div>
