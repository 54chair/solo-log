<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-warning">
    <div class="container-lg">
      <%= link_to 'ソロログ', root_path, class: "nav-link, navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup" >
        <div class="navbar-nav">
          <% if user_signed_in? %>
            <%= button_to 'ホーム', root_path, method: :get, class: "btn btn-warning nav-link" %>
            <!-- ログアウトのモーダルを表示する用のボタン -->
            <button type="button" class="btn btn-warning nav-link" data-bs-toggle="modal" data-bs-target="#logoutModal">
              ログアウト
            </button>
            <%= render 'layouts/logout_modal' %>
          <% else %>
            <%= button_to '新規登録', new_user_registration_path, method: :get, class: "btn btn-warning nav-link" %>
            <%= button_to 'ログイン', new_user_session_path, method: :get, class: "btn btn-warning nav-link" %>
            <%= button_to '飲食店一覧', shops_path, method: :get, class: "btn btn-warning nav-link" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>